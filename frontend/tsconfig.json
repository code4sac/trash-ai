{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "lib": ["esnext", "esnext.asynciterable", "dom"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "vuetify",
            "@nuxt/axios",
            "@nuxt/vue-app"
        ]
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*", "./plugins/**/*", "./components/**/*"]
}
